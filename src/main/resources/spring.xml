<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">


    <!-- 加载配置属性文件 -->
    <context:property-placeholder ignore-unresolvable="true" location="classpath:app.properties" />

    <!-- 开启注解 -->
    <context:component-scan base-package="com.fengjx.ttwx"/>
    <!-- 添加注解驱动 -->
    <mvc:annotation-driven/>

    <aop:aspectj-autoproxy/>

    <import resource="spring-db.xml"/>
    <import resource="spring-beans.xml"/>
    <import resource="spring-aop.xml"/>
    <import resource="spring-email.xml"/>
    <import resource="spring-mvc-interceptor.xml"/>
    
</beans>