<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
	http://www.springframework.org/schema/tx
	http://www.springframework.org/schema/tx/spring-tx-3.2.xsd"> 
	
	<!-- 微信请求日志记录 -->
	<bean id="wechatLogAop" class="com.fjx.wechat.mysdk.process.in.aop.WechatLogAop"></bean>
	<aop:config>
		<!-- 定义全局切面 -->
		<aop:pointcut id="logPointcut" expression="execution(* com.fjx.wechat.mysdk.process.in.InServiceEngine*.processRequest(..))"/>
		<aop:aspect id="logAspect" ref="wechatLogAop">
			<aop:before method="addReqLog" pointcut-ref="logPointcut" />
			<aop:after-returning method="addRespLog" pointcut-ref="logPointcut" returning="returnValue"/>
		</aop:aspect>
	</aop:config>
	 
</beans>

